<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet"
        href="https://bootswatch.com/4/flatly/bootstrap.min.css">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/">Symfony</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor03">
                <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Accueil
                    <span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/produit">Artistes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/promo">Connexion</a>
                </li>
                </ul>
            </div>
        </nav>
        
        <div class="container">
            {% block body %}{% endblock %}
        </div>
        <div class="card mb-5" style="width: 18rem;">
            {% for albu in album %}
            <img src="{{ albu.cover }}" class="card-img-top">
            <div class="card-body">
                <h5 class="card-title">{{ albu.name }}</h5>
                <p class="card-text">Realeased in : {{ albu.releaseYear }}</p>
                <p class="card-text">By : {{ albu.artist.name }}</p>
            </div>
            {% endfor %}
        </div>
        {% block javascripts %}
        <script
                src="https://code.jquery.com/jquery-3.5.1.min.js"
                integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
                crossorigin="anonymous">
            </script>
            <script src="/js/script.js"></script>
            {% endblock %}
    </body>
</html>